<div class="container">
<%= form_tag("/blogs", method: "blog", multipart: true) do %>
  <div class="form-group">
    <%= label_tag(:blog_title, "제목")%>
    <%= text_field_tag "blog[title]", "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag(:blog_content, "내용")%>
    <%= text_area_tag("blog[content]", "", class: "form-control") %>
  </div>
  <div class="form-group">
    <%= label_tag(:blog_blogimage, "첨부파일")%>
    <%= file_field_tag("blog[blogimage]", class: "form-control") %><br />
  </div>
    <%= button_tag("제출", class: "btn btn-primary") %>
  </div>
<% end %>
</div>
