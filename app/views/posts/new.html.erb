<hr />
<div class="container">
<%= form_tag("/posts", method: "post", multipart: true) do %>
  <div class="form-group">
    <%= label_tag(:post_title, "제목")%>
    <%= text_field_tag "post[title]", "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag(:post_content, "내용")%>
    <%= text_area_tag("post[content]", "", class: "form-control") %>
  </div>
  <div class="form-group">
    <%= label_tag(:post_postimage, "첨부파일")%>
    <%= file_field_tag("post[postimage]", class: "form-control") %><br />
  </div>
  <div class="form-group">
    <%= label_tag("start")%>
    <%= datetime_local_field_tag("", class: "form-control") %>~
    <%= label_tag("end")%>
    <%= datetime_local_field_tag("", class: "form-control") %><br />
    <%= label_tag("1")%>
    <%= radio_button_tag("", class: "form-control")%>
    <%= label_tag("2")%>
    <%= radio_button_tag("", class: "form-control")%>
  </div>
  <div class="dropdown show">
    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Where?
    </a>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
      <a class="dropdown-item">Seoul</a>
      <a class="dropdown-item">Pusan</a>
      <a class="dropdown-item">Daejeon</a>
      <a class="dropdown-item">Kwangju</a>
      <a class="dropdown-item">Daegu</a>
      <a class="dropdown-item">Jeju</a>
    </div>
  </div>
    <%= button_tag("제출", class: "btn btn-primary") %>
  </div>
<% end %>
</div>
